<!DOCTYPE html>
<html>
<head>
    <style>
        .main {
            width: 30vw;
            height: 90vh;
            border-radius: 3px;
            box-shadow: 0 0 7px 3px #a7a7a7;
            background-color: #ffffff;
            display: flex;
            margin: auto;
            flex-direction: column;
            align-items: center;
            padding: 10px;
            position: relative;
        }
        .card-container{
           width: 100%;
            height: 100%;
            overflow: auto;
        }

        .card {
            min-height: 100px;
            width: calc(100% - 30px);
            margin: 10px auto;
            box-shadow: 0 0 7px 3px #a7a7a7;
            border-radius: 5px;
            padding:5px;
            display:flex;
            align-items: center;
            cursor: pointer;
            position: relative;
            overflow: hidden;
        }
        .card .pic{
            width: 80px;
            height: 80px;
            border-radius: 50%;
            background-position: center;
            background-repeat: no-repeat;
            background-color: #ffc800;
            margin: 5px;
            flex-shrink: 0;
        }
        .card .name{
            text-transform: capitalize;
            font-family: system-ui;
            color: #3c3c3c;
        }
        .card:hover .action-ribbon{
            right: -70px;
            transition: right 100ms linear 200ms;
        }
        .action-ribbon{
            position: absolute;
            right: -100px;
            display: flex;
            transition: right 200ms linear 1s;
            height: 30px;
            align-items: center;
            border-radius: 15px;
            background-color: #fff;
            border: 1px solid #b9b9b9;
            padding-right: 20px;
        }
        .card:hover .action-ribbon:hover{
            right: -15px;
            transition: 300ms;
        }
        .create-button{
            width: 60px;
            height: 60px;
            border-radius: 50%;
            background-color: #24adfe;
            color: white;
            font-size: 40px;
            position: absolute;
            bottom: 40px;
            right: 40px;
            transform: translate(50%,50%);
            transition: 100ms;
            display: flex;
            justify-content: center;
            align-items: center;
            cursor: pointer;
        }
        .create-button:hover{
            /*width: 62px;*/
            /*height: 62px;*/
            background-color: #007ee4;
            transition: 100ms;
            /*font-weight: bolder;*/
            /*font-size: 45px;*/
        }
        .action-icon{
            background-repeat: no-repeat;
            background-position: center center;
            background-size: 25px;
            cursor: pointer;
            width: 25px;
            height: 25px;
        }
        .arrow{
            background-image: url("/icon/arrow.svg");
            background-size: 15px;
        }
        .edit{
            background-image: url("/icon/edit.svg");
            
        }
        .delete{
            background-image: url("/icon/delete.svg");

        }
    </style>
</head>
<body>
<div id="main" class="main">
    <div class="card-container" id="card-container"></div>
    <div class="create-button" onclick="createPerson()">+</div>
</div>
</body>
<script type="text/javascript">
    function createPerson() {
        window.location.href = window.location.origin+'/people/create_html'
    }
    (function () {
        var xhttp = new XMLHttpRequest();
        xhttp.onreadystatechange = function(){
            if(this.readyState == 4 && this.status == 200){
                var container = document.getElementById('card-container');
                console.log(this.response)
                console.log(JSON.parse(this.response))
                JSON.parse(this.response).forEach(ele => {
                    var element = document.createElement('div', {class: 'df'})
                    element.classList.add('card')
                    element.onclick = function () {
                        details(ele.name)
                    };
                    element.setAttribute('_id', ele)
                    element.innerHTML = `<div class="pic" style="background-image: url('${ele.primary_pic}')"></div><div class="name">${ele.name}</div>
<div class="action-ribbon">
<div class="arrow action-icon"></div>
<div class="edit action-icon"></div>
<div class="delete action-icon"></div>
</div>`
                    container.appendChild(element)
                })
            }
        }
        xhttp.open('GET','/people/all')
        xhttp.send()
    })()

    function details(_id) {
        window.location.href = window.location.origin + '/people/html/' + _id
    }
</script>
</html>